import pylab
from matplotlib.widgets import Button

class ButtonCallback1:
	def draw_button1(self,event):
		fig = pylab.figure()
		a = pylab.axes([0.1, 0.1, 0.8, 0.8])
		b = Button(a, 'Button 1')

		def say_something(event):
		    print "This works."

		b.on_clicked(say_something)
		pylab.show()

def draw_button2():
    callback = ButtonCallback1()
    fig = pylab.figure()
    a = pylab.axes([0.1, 0.1, 0.1, 0.1])
    b = Button(a, 'Button 2')
    b.on_clicked(callback.draw_button1)
    pylab.show()


draw_button2()


